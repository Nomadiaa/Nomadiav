generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nom       String
  prenom    String
  email     String   @unique
  password  String
  role     Role       @default(user)
  createdAt DateTime @default(now())
}

enum Role {
  user
  admin
}

// Destination admin

model Destination {
  id              String           @id @default(cuid())
  titre           String
  pays            String
  continent       String?         
  description String ? 
  imagePrincipale String?
  sections        Section[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}


// Pour lier les destinations aux section dynamique

model Section {
  id             String     @id @default(cuid())
  titre          String     
  contenu        String   @db.Text    // pour que les textes longs ne soient pas tronqués par défaut
  ordre          Int        
  type           SectionType
  destinationId  String
  
  subsections Subsection[]
  bulletPoints BulletPoint[]
  images    Image[]

  updatedAt DateTime @updatedAt
  destination    Destination @relation(fields: [destinationId], references: [id])
}

// Pour facilement classer chaque section dans le code

enum SectionType {
  GUIDE
  PRESENTATION
  INFORMATIONS
  QUE_FAIRE
  COMMENT_Y_ALLER
  FORMALITES
  CONSEILS
  POURQUOI_Y_ALLER
}

// pour les galeries d'image

model Image {
  id            String   @id @default(cuid())
  url           String
  alt           String?
  sectionId     String
  
  section       Section  @relation(fields: [sectionId], references: [id])
}

model Subsection {
  id         String   @id @default(cuid())
  titre      String
  ordre      Int
  sectionId  String
  section    Section  @relation(fields: [sectionId], references: [id])
}

model BulletPoint {
  id         String   @id @default(cuid())
  contenu    String
  ordre      Int
  sectionId  String
  section    Section  @relation(fields: [sectionId], references: [id])
}
